<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/popup"
    android:layout_width = "wrap_content"
    android:layout_height = "match_parent"
    android:layout_gravity = "center"
    android:orientation = "vertical"
    android:paddingLeft = "10dp"
    android:paddingRight = "10dp">

    <TextView
        android:id = "@+id/popupName"
        android:layout_height = "wrap_content"
        android:layout_width = "wrap_content"
        android:text = "Lee Wee Nam Library"
        android:textSize = "17dp"
        android:textStyle = "bold"
        android:paddingTop = "5dp"/>

    <TextView
        android:id = "@+id/popupLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "NS 2.1.3"/>

    <TextView
        android:id = "@+id/popupCrowdLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Crowd-level: 200/300"
        />

    <RatingBar
        android:id="@+id/popupRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:rating = "4"
        android:max = "5"
        android:isIndicator = "true"/>

    <Button
        android:id = "@+id/popupInfoBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity = "right"
        android:text = "More Info"
        android:textSize = "10dp" />

</LinearLayout>

